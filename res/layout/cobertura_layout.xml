                android:textColor="#000" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#000" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="22dp"
         android:layout_marginTop="24dp"
         android:text="Tipo de ServiÃ§o"
         android:textColor="#000" />

    <LinearLayout
        android:id="@+id/LinearLayoutVisitaOUentrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="14dp"
        android:paddingRight="40dp"
        android:orientation="vertical" >
    </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/LinearLayoutVisitaOUentrega"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/LinearLayoutVisitaOUentrega"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingRight="40dp" >

        </LinearLayout>
                                       
 </RelativeLayout>
        